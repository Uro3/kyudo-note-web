{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "png": ["src/@types/png"],
    },
    "typeRoots": ["@types", "node_modules/@types"],
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
